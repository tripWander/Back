{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "rootDirs": [
      "src/features/auth/__tests__",
      "src"
    ],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*":["./*"]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src",
    ".env"
  ],
  "exclude": [
    "node_modules"
  ]
}